<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PopUpConfirmSendLocation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="68dp"
        android:text="Usted esta por enviar la informacion de entrada/salida de su jornada"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_btn_enable"
        android:backgroundTint="@color/teal_700"
        android:onClick="goToGetLocation"
        android:padding="12dp"
        android:text="Confirmar"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shape_btn_enable"
        android:backgroundTint="@color/teal_700"
        android:clickable="true"
        android:onClick="closePopUp"
        android:padding="12dp"
        android:text="Volver"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_confirm"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>